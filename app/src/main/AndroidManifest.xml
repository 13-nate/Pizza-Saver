<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mineseeker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/bomb"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/bomb"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".com.example.mineseeker.UI.OptionsActivity"
            android:screenOrientation="sensorLandscape">
        </activity>
        <activity
            android:name=".com.example.mineseeker.UI.HelpMenuActivity"
            android:screenOrientation="sensorLandscape" />
        <activity

            android:name=".com.example.mineseeker.UI.PlayGameActivity"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".com.example.mineseeker.UI.GameMenu"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".com.example.mineseeker.UI.WelcomeScreenActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/AppTheme.NoActionBar"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>