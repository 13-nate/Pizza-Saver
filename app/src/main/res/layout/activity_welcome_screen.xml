<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/logo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ufo_pizza_abduction"
    tools:context=".com.example.mineseeker.UI.WelcomeScreenActivity">


    <TextView
        android:id="@+id/welcomeLogo_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="@string/ufo_destroyer"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#EE0A0A"
        android:textStyle="bold"
        app:fontFamily="@font/finger_paint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.069" />

    <TextView
        android:id="@+id/txtSaveTheZa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="206dp"
        android:text="@string/save_the_za"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#EE0A0A"
        android:textSize="14sp"
        android:textStyle="bold"
        app:fontFamily="@font/finger_paint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeLogo_textView" />

    <TextView
        android:id="@+id/author_textView"
        android:layout_width="165dp"
        android:layout_height="40dp"

        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:singleLine="false"
        android:text="@string/by_kevin_chen_su_and_nathan_simms"
        android:textColor="#EE0A0A"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="@font/bigshot_one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeLogo_textView"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/skip_imageButton"
        android:layout_width="134dp"
        android:layout_height="43dp"
        android:layout_marginTop="313dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="#EE0A0A"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_skip_next_black_24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="731dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.94"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.17" />


</androidx.constraintlayout.widget.ConstraintLayout>